<!--New book-->
<%= render 'form', books: @book %>

<!--Books-->
<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          
          <td>
            <%= link_to book_path(book.id) do %>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
