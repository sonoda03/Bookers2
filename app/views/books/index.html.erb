<!--Books-->
<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |books| %>
        <tr>
          
          <td>
            <%= link_to book_path(books.id) do %>
              <%= image_tag books.get_image %>
            <% end %>
          </td>
          <td><%= link_to books.title, book_path(books.id) %></td>
          <td><%= books.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
