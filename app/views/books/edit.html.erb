<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <h3>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model:@book do |book| %>
        <div class="form-group">
          <p>Title</p>
          <%= book.text_field :title %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= book.text_area :body %>
        </div>
        <div class="form-group">
          <p><%= book.submit 'Update Book', class: 'btn btn-success' %></p>
        </div>
        <p>
          <span><%= link_to "Show", book_path(@book.id) %></span>
          |
          <span><%= link_to "Back", books_path %></span>
        </p>
      <% end %>
    </div>
  </div>
</div>



  

  

  
  