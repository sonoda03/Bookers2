<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--User info＆New book-->
      <%= render 'form', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!-- ユーザー一覧 -->
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
            <% @users.each do |users| %>
              <tr>
                <td><%= image_tag users.get_profile_image(100,100) %></td>
                <td><%= users.name %></td>
                <td><%= link_to "Show", user_path(users.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>







